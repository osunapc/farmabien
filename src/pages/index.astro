---
import Layout from "../layouts/Layout.astro";
import AddToCartButton from "../components/AddToCartButton";
import { supabase } from "../lib/supabase";



let { data: productos, error } = await supabase
	.from("productos")
	.select("*")
	.gt("inventario", 0);
---

<Layout title="Inicio">
	<section class="bg-gradient-to-r from-primary to-secondary text-white py-20">
		<div class="container mx-auto px-4">
			<h1 class="text-5xl font-bold mb-4">Bienvenido a FarmaBien</h1>
			<p class="text-xl">Tu salud es nuestra prioridad</p>
		</div>
	</section>

	<section class="container mx-auto px-4 py-16">
		<h2 class="text-3xl font-bold mb-8">Productos Destacados</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
			{
				productos.map(
					(product: {
						id: any;
						imagen: string;
						nombre: string;
						laboratorio: string;
						precio: number;
					}) => (
						<div class="bg-white rounded-lg shadow-md overflow-hidden">
							<a href={`/productos/${product.id}`}>
								<img
									src={product.imagen}
									alt={product.nombre}
									class="w-full h-48 object-cover"
								/>
							</a>
							<div class="p-4">
								<a href={`/productos/${product.id}`}>
									<h3 class="font-bold text-lg mb-2">{product.nombre}</h3>
								</a>
								<p class="text-gray-600 mb-2">{product.laboratorio}</p>
								<p class="text-primary font-bold mb-4">
									S/ {product.precio.toFixed(2)}
								</p>
								<AddToCartButton
									client:load
									product={{
										id: product.id,
										name: product.nombre,
										price: product.precio,
										image: product.imagen,
									}}
								/>
							</div>
						</div>
					)
				)
			}
		</div>
	</section>
</Layout>
