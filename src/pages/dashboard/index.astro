---
import Tnuevospedidos from "../../components/Dashboard/Tnuevospedidos";
import Tpedidosaceptados from "../../components/Dashboard/Tpedidosaceptados";
import Tpedidosrechazados from "../../components/Dashboard/Tpedidosrechazados";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link href="https://cdn.tailwindcss.com" rel="stylesheet" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />

		<title>Delivery</title>
	</head>
	<style>
		/* Estilo para el encabezado fijo */
		th {
			position: sticky;
			top: 0;
			background-color: white; /* Cambia el color según tus necesidades */
			z-index: 10; /* Asegúrate de que esté por encima del contenido */
		}
	</style>
	<body style="scrollbar-color: green rgba(155, 125, 144, 0);">
		<div>
			<script
				src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
				defer></script>
			<div>
				<div
					x-data="{ sidebarOpen: false, currentTab: 'nuevos' }"
					class="flex h-screen bg-gray-200"
				>
					<!--fondo de menu en movil -->
					<div
						:class="sidebarOpen ? 'block' : 'hidden'"
						@click="sidebarOpen = false"
						class="fixed inset-0 z-20 transition-opacity bg-black opacity-50 lg:hidden"
					>
					</div>
					<!--menu -->
					<div
						:class="sidebarOpen ? 'translate-x-0 ease-out' : '-translate-x-full ease-in'"
						class="fixed inset-y-0 left-0 z-30 w-64 overflow-y-auto transition duration-300 transform bg-white lg:translate-x-0 lg:static lg:inset-0"
					>
						<div class="flex items-center justify-center mt-8">
							<div class="flex flex-col items-center">
								<img src="/fb_logo.svg" alt="logo farmabien" />

								<span class="mx-2 text-2xl font-semibold text-gray-500"
									>Dashboard</span
								>
							</div>
						</div>

						<nav class="mt-10">
							<a
								@click="currentTab = 'nuevos'"
								class="flex items-center px-6 py-2 mt-4"
								:class="currentTab === 'nuevos' ? 'text-gray-600 bg-green-500 bg-opacity-25' : 'text-gray-600 hover:bg-green-500 hover:bg-opacity-25 hover:text-gray-800'"
								href="#"
							>
								<svg
									class="w-6 h-6"
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
								</svg>

								<span class="mx-3">Pedidos</span>
							</a>

							<a
								@click="currentTab = 'aceptados'"
								class="flex items-center px-6 py-2 mt-4"
								:class="currentTab === 'aceptados' ? 'text-gray-600 bg-green-500 bg-opacity-25' : 'text-gray-600 hover:bg-green-500 hover:bg-opacity-25 hover:text-gray-800'"
								href="#"
							>
								<svg
									class="w-6 h-6"
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z"
									>
									</path>
								</svg>

								<span class="mx-3">Aceptados</span>
							</a>

							<a
								@click="currentTab = 'rechazados'"
								class="flex items-center px-6 py-2 mt-4"
								:class="currentTab === 'rechazados' ? 'text-gray-600 bg-green-500 bg-opacity-25' : 'text-gray-600 hover:bg-green-500 hover:bg-opacity-25 hover:text-gray-800'"
								href="#"
							>
								<svg
									class="w-6 h-6"
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
									>
									</path>
								</svg>

								<span class="mx-3">Rechazados</span>
							</a>

							<a
								class="flex items-center px-6 py-2 mt-4 text-gray-600 hover:bg-green-500 hover:bg-opacity-25 hover:text-gray-800"
								href="#"
							>
								<svg
									class="w-6 h-6"
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
									>
									</path>
								</svg>

								<span class="mx-3">Forms</span>
							</a>
						</nav>
					</div>
					<!-- pedidos -->
					<div class="flex flex-col flex-1 overflow-hidden">
						<header
							class="flex items-center justify-between px-6 py-4 bg-white border-b-4 border-green-500"
						>
							<div class="flex items-center">
								<button
									@click="sidebarOpen = true"
									class="text-green-500 focus:outline-none lg:hidden"
								>
									<svg
										class="w-6 h-6"
										viewBox="0 0 24 24"
										fill="none"
										xmlns="http://www.w3.org/2000/svg"
									>
										<path
											d="M4 6H20M4 12H20M4 18H11"
											stroke="currentColor"
											stroke-width="2"
											stroke-linecap="round"
											stroke-linejoin="round"></path>
									</svg>
								</button>
							</div>
							<!--logoen header -->
							<div class="flex items-center">
								<img src="/fb_logo.svg" alt="" />
							</div>
						</header>
						<main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
							<div
								class="container px-6 py-8 mx-auto flex flex-col justify-center items-center"
							>
								<h3 class="text-3xl font-medium text-gray-700">
									<template x-if="currentTab === 'nuevos'">
										<span>Nuevos Pedidos</span>
									</template>
									<template x-if="currentTab === 'aceptados'">
										<span>Aceptados</span>
									</template>
									<template x-if="currentTab === 'rechazados'">
										<span>Rechazados</span>
									</template>
								</h3>

								<div class="mt-8"></div>
								<!--contenedor de tablas -->
								<div class="flex flex-col w-[98%] h-[60vh]">
									<div class="overflow-x-auto sm:-mx-6 sm:px-6">
										<div
											class="inline-block min-w-full overflow-hidden align-middle border-b border-gray-200 shadow sm:rounded-lg"
										>
											<template x-if="currentTab === 'nuevos'">
												<span><Tnuevospedidos client:load /></span>
											</template>
											<template x-if="currentTab === 'aceptados'">
												<div><Tpedidosaceptados client:load /></div>
											</template>
											<template x-if="currentTab === 'rechazados'">
												<div><Tpedidosrechazados client:load /></div>
											</template>
										</div>
									</div>
								</div>
							</div>
						</main>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
